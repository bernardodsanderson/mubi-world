{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    // ...add the "headers" section to the "hosting" section.
    "headers": [ {
      "source" : "**/*.@(jpg|jpeg|gif|png|json|js|xml)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "max-age=7200"
    } ]
    }, {
      "source" : "**/*.@(jpg|jpeg|gif|png)",
      "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=7200"
      } ]
    }, {
      // Sets the cache header for 404 pages to cache for 5 minutes
      "source" : "404.html",
      "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=300"
      } ]
    } ]
  }
}
